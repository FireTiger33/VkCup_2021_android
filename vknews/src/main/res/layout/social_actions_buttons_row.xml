<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:theme="@style/ThemeCardLightBackground">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/like"
        android:src="@drawable/ic_post_like" />

    <TextView
        android:id="@+id/likes_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/number_of_social_actions_color"
        tools:text="8" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_buttons_row"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/like"
        android:src="@drawable/ic_comment" />

    <TextView
        android:id="@+id/comments_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/number_of_social_actions_color"
        tools:text="8" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_buttons_row"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/like"
        android:src="@drawable/ic_share" />

    <TextView
        android:id="@+id/reposts_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/number_of_social_actions_color"
        tools:text="8" />

</LinearLayout>