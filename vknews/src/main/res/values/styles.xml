<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/vk_sans_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NewsTextBold" parent="NewsText">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NewsText" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/vk_sans_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/content_text_color</item>
        <item name="maxLines">100</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="OverlayMessage" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/vk_sans_medium</item>
        <item name="android:layout_width">146dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/shape_primary_12</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>